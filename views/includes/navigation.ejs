<% const navIsAuthenticated = typeof isAuthenticated !== 'undefined' ?
isAuthenticated : false; const navPath = typeof path !== 'undefined' ? path :
''; const navCsrfToken = typeof csrfToken !== 'undefined' ? csrfToken : ''; %>

<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= navPath === '/' ? 'active' : '' %>" href="/">Shop</a>
      </li>
      <li class="main-header__item">
        <a
          class="<%= navPath === '/products' ? 'active' : '' %>"
          href="/products"
          >Products</a
        >
      </li>
      <% if (navIsAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= navPath === '/cart' ? 'active' : '' %>" href="/cart"
          >Cart</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= navPath === '/orders' ? 'active' : '' %>" href="/orders"
          >Orders</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= navPath === '/admin/add-product' ? 'active' : '' %>"
          href="/admin/add-product"
          >Add Product</a
        >
      </li>
      <li class="main-header__item">
        <a
          class="<%= navPath === '/admin/products' ? 'active' : '' %>"
          href="/admin/products"
          >Admin Products</a
        >
      </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!navIsAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= navPath === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= navPath === '/signup' ? 'active' : '' %>" href="/signup"
          >Signup</a
        >
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= navCsrfToken %>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/' ? 'active' : '' %>" href="/">Shop</a>
    </li>
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/products' ? 'active' : '' %>" href="/products"
        >Products</a
      >
    </li>
    <% if (navIsAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/cart' ? 'active' : '' %>" href="/cart"
        >Cart</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/orders' ? 'active' : '' %>" href="/orders"
        >Orders</a
      >
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= navPath === '/admin/add-product' ? 'active' : '' %>"
        href="/admin/add-product"
        >Add Product</a
      >
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= navPath === '/admin/products' ? 'active' : '' %>"
        href="/admin/products"
        >Admin Products</a
      >
    </li>
    <% } %> <% if (!navIsAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/login' ? 'active' : '' %>" href="/login"
        >Login</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= navPath === '/signup' ? 'active' : '' %>" href="/signup"
        >Signup</a
      >
    </li>
    <% } else { %>
    <li class="mobile-nav__item">
      <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="<%= navCsrfToken %>" />
        <button type="submit">Logout</button>
      </form>
    </li>
    <% } %>
  </ul>
</nav>
